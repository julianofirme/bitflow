    "eslint-config-standard-with-typescript": "^43.0.1",
    "fastify-tsconfig": "^2.0.0",
    "husky": "^9.1.5",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tap": "^21.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.0",
