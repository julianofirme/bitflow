    "@fastify/autoload": "^5.10.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.4.0",
    "@fastify/jwt": "^8.0.1",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/type-provider-typebox": "^4.1.0",
    "@prisma/client": "^5.19.0",
    "axios": "^1.7.5",
    "bull": "^4.16.1",
    "dotenv": "^16.4.5",
    "env-cmd": "^10.1.0",
    "fastify": "^4.28.1",
    "fastify-cli": "^6.3.0",
    "fastify-cors": "^6.1.0",
    "fastify-jwt": "^4.2.0",
